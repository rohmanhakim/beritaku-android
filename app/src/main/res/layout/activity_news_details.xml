<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="com.rohmanhakim.beritaku.details.NewsDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="56dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/newsfeed_default_margin"
            android:paddingTop="22dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp"
            android:orientation="vertical">
            <com.rohmanhakim.beritaku.custom.XTextView
                android:id="@+id/text_newsfeed_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/newsfeed_content_text_small"
                android:textColor="#005689"
                app:fontFamily="roboto"
                app:fontStyle="bold"
                android:textAllCaps="true" />
            <TextView
                android:id="@+id/text_newsfeed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="#333333"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/newsfeed_title_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/newsfeed_default_margin" />
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/newsfeed_default_margin"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/newsfeed_content_text_small"
                    android:text="@string/by"/>
                <TextView
                    android:id="@+id/text_newsfeed_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/newsfeed_content_text_small"
                    android:textColor="#005689" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textColor="#767676"
                    android:text="-"
                    android:textSize="@dimen/newsfeed_content_text_small"/>
                <TextView
                    android:id="@+id/text_newsfeed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/newsfeed_content_text_small"
                    android:textColor="#767676"/>
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <com.rohmanhakim.beritaku.custom.XTextView
            android:id="@+id/text_newsfeed_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:textSize="@dimen/newsfeed_content_text_large"
            android:textColor="#333333"
            android:lineSpacingExtra="5dp"
            app:fontFamily="ptserif"
            app:fontStyle="regular"
            />
    </LinearLayout>

</ScrollView>
