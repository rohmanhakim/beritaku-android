<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/sample_cover_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/newsfeed_title_margin_top">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/newsfeed_title_container_height"
                android:background="@drawable/black_fade_gradient"
                android:paddingBottom="@dimen/header_small_margin"
                android:paddingRight="@dimen/newsfeed_default_margin"
                android:paddingLeft="@dimen/newsfeed_default_margin">
                <TextView
                    android:id="@+id/text_newsfeed_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="11 Media yang Diblokir Kemenkominfo Tak Terdaftar di Dewan Pers"
                    android:textColor="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/newsfeed_title_text_size"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingTop="@dimen/newsfeed_default_margin"
                android:paddingRight="@dimen/newsfeed_default_margin"
                android:paddingLeft="@dimen/newsfeed_default_margin"
                android:paddingBottom="@dimen/newsfeed_container_bottom_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_newsfeed_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detik"
                        android:textSize="@dimen/newsfeed_content_text_size"
                        android:textColor="#005689"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:textColor="#767676"
                        android:text="-"
                        android:textSize="@dimen/newsfeed_content_text_size"/>
                    <TextView
                        android:id="@+id/text_newsfeed_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Januari 2016 22:00 WIB"
                        android:textSize="@dimen/newsfeed_content_text_size"
                        android:textColor="#767676"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_newsfeed_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/newsfeed_content_text_size"
                    android:textColor="#333333"
                    android:text="Kemenkominfo memblokir 11 situs media online yang dianggap mengandung konten negatif. Dewan Pers menyebut situs-situs itu tidak terdaftar sebagai media."/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>